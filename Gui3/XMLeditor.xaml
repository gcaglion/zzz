<Window x:Class="Gui3.XMLeditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui3"
        mc:Ignorable="d"
        Title="XMLeditor" Height="307.992" Width="334.426">
    <Grid>
        <RichTextBox x:Name="rtbXMLcontent" HorizontalAlignment="Left" Height="215" VerticalAlignment="Top" Width="316" RenderTransformOrigin="0.5,0.5" Margin="0,32,0,0" TextChanged="rtbXMLcontent_TextChanged">
        </RichTextBox>
        <Button x:Name="btnSaveClose" Content="Save and Close" HorizontalAlignment="Left" Height="20" Margin="0,248,0,0" VerticalAlignment="Top" Width="84" FontSize="11" Click="btnSaveClose_Click"/>
        <Button x:Name="btnCancelExit" Content="Cancel and Exit" HorizontalAlignment="Left" Height="21" Margin="226,247,0,0" VerticalAlignment="Top" Width="90" FontSize="11"/>
        <Label x:Name="lbFileName" Content="" HorizontalAlignment="Left" Height="24" Margin="3,3,0,0" VerticalAlignment="Top" Width="313" FontSize="10"/>

    </Grid>
</Window>
