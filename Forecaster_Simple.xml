<Forecaster>
	MyList = abc, def, ghijkl, mnopqras
	<Data>
		<Shape>
			SampleLen		= 100
			PredictionLen	= 3
			FeaturesCount	= 4
		</Shape>
		<Train>
			Do	= true
			<DataSet>
				<TimeSerie>
					Date0				= 201707010000
					HistoryLen			= 500
					DataTransformation	= DT_DELTA
					StatisticalFeatures	= TSF_HISTVOL, TSF_KURTOSIS, TSF_MEAN
					Dump				= true
					<FXDB_DataSource>
						Symbol				= EURUSD
						TimeFrame			= H1
						IsFilled			= false
						<DBConnection>
							UserName	= History
							Password	= HistoryPwd
							ConnString	= Algo
						</DBConnection>
					</FXDB_DataSource>
				</TimeSerie>
				BatchSamplesCount	= 10
				SelectedFeatures	= FXOPEN, FXHIGH, FXLOW, FXCLOSE
				BarWidthCalc		= true
				BarWidthFeatures	= 1,2
				Dump 				= true
			</DataSet>
		</Train>
		<Validation>
			Do	= false
			<DataSet>
				<TimeSerie>
					<File_DataSource>
						FileName = C:/temp/SunSpots.txt
						FieldSep = TAB_SEPARATOR
						CalcBW = true
						BWfeatureH = 4
						BWfeatureL = 5
					</File_DataSource>
				</TimeSerie>
			</DataSet>
		</Validation>
		<Test>
			Do	= false
			<DataSet>
				<TimeSerie>
					HistoryLen			= 105
					DataTransformation	= DT_DELTALOG
					BWCalc				= true
					StatisticalFeatures	= TSF_HISTVOL, TSF_KURTOSIS, TSF_MEAN
					<FXDB_DataSource>
						Symbol				= EURUSD
						TimeFrame			= H1
						IsFilled			= false
						<DBConnection>
							UserName	= History
							Password	= HistoryPwd
							ConnString	= Algo
						</DBConnection>
					</FXDB_DataSource>
				</TimeSerie>
				BatchSamplesCount	= 50
				SelectedFeatures	= FXOPEN, FXHIGH, FXLOW, FXCLOSE
				BWFeatures			= 1,2
			</DataSet>
		</Test>
	</Data>
	<Engine>
		Type 		= ENGINE_CUSTOM
		<Custom>
			CoresCount	= 1
			<Core0>
				<Layout>
					Type	= CORE_NN
					Parents			= 
					ParentsConnType	= 
				</Layout>
				<Parameters>
					<Topology>
						LevelRatio			= 0.5
						LevelActivation		= NN_ACTIVATION_TANH, NN_ACTIVATION_TANH, NN_ACTIVATION_TANH
						UseContext			= true
						UseBias				= false
					</Topology>
					<Training>
						MaxEpochs			= 50
						TargetMSE			= 0.0001
						NetSaveFrequency	= 10
						StopOnDivergence	= false
						BP_Algo				= BP_STD
						<BP_Std>
							LearningRate		= 0.001
							LearningMomentum	= 0.4
						</BP_Std>
						<BP_Qing>
						</BP_Qing>
						<BP_Qprop>
						</BP_Qprop>
						<BP_RProp>
						</BP_RProp>
					</Training>
				</Parameters>
				<Persistor>
					saveMSE			= true
					saveRun			= true
					saveInternals	= false
					saveImage		= true
					saveToDB		= true
					saveToFile		= true
					<DestOraData>
						UserName	= CULogUser
						Password	= LogPwd
						ConnString	= Algo
					</DestOraData>
					<DestFileData>
						Client		= c:\temp\logs\Persistor\Client.log
						MSE			= c:\temp\logs\Persistor\MSE.log
						Run			= c:\temp\logs\Persistor\Run.log
						Internals	= c:\temp\logs\Persistor\Internals.log
						Image		= c:\temp\logs\Persistor\Image.log
					</DestFileData>
				</Persistor>
			</Core0>
		</Custom>
		<XIE>
		</XIE>
		<WNN>
		</WNN>
	</Engine>
	<Persistor>
		saveNothing		= false		
		saveClient		= true
		saveMSE			= true
		saveRun			= true
		saveInternals	= false
		saveImage		= true
		saveToDB		= true
		saveToFiles		= true
		<DestOraData>
			UserName	= CULogUser
			Password	= LogPwd
			ConnString	= Algo
		</DestOraData>
		<DestFileData>
			Client		= c:\temp\logs\Persistor\Client.log
			MSE			= c:\temp\logs\Persistor\MSE.log
			Run			= c:\temp\logs\Persistor\Run.log
			Internals	= c:\temp\logs\Persistor\Internals.log
			Image		= c:\temp\logs\Persistor\Image.log
		</DestFileData>
	</Persistor>
</Forecaster>
